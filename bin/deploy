#!/bin/bash
wpFolder="./.wp"
wpContentFolder="$wpFolder/wp-content"
distFolder="dist"

sudo chmod -R 777 $wpFolder
sudo chmod -R 777 $distFolder

mkdir -p $wpContentFolder/themes/
mkdir -p $wpContentFolder/plugins/

if [ "$(ls A $distFolder)" ]; then
	npm run build "$@"
	rsync -r -u $distFolder/* $wpContentFolder/
fi
