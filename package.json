{
	"name": "wordpress-devcontainer",
	"description": "A simple docker developer environment for wordpress theme and plugin development",
	"version": "0.0.3",
	"author": "Ken Eucker <keneucker@gmail.com>",
	"contributors": [],
	"bin": {},
	"scripts": {
		"build": "./bin/build",
		"clean": "./bin/clean",
		"compile": "./bin/compile",
		"deploy": "./bin/deploy",
		"pull": "./bin/pull",
		"redeploy": "npm run compile && npm run deploy",
		"start": "./bin/start",
		"stop": "./bin/stop",
		"teardown": "./bin/teardown",
		"vip": "./bin/vip",
		"watch": "./bin/watch"
	},
	"devDependencies": {
		"commander": "^2.20.0",
		"download-git-repo": "^1.1.0",
		"fs-extra": "^7.0.1",
		"gulp": "^4.0.0",
		"mkdirp": "^0.5.1",
		"mkdirp-sync": "^0.0.3",
		"mocha": "^10.2.0",
		"path": "^0.12.7",
		"replace-in-file": "^3.4.4",
		"chalk": "^2.4.2"
	},
	"config": {
		"vip": true,
		"name": "",
		"theme_name": "my-theme",
		"plugin_name": null,
		"port": 6000,
		"admin_user": {
			"name": "user",
			"pass": "user"
		},
		"repositories": {
			"src": null,
			"theme": "KenEucker/understrap-child",
			"themes/understrap": "understrap/understrap",
			"plugin": null,
			"access_token": null,
			"clone": false
		}
	}
}
